@using RCSoft.Web.Models.Products;
@using RCSoft.Web.Framework;
@model CategoryModel
@{
    ViewBag.Title = @T("Products.Catalog.Edit").Text;
}
@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "Catelog-form" }))
{ 
    <div class="section-header">
        <div class="title">
            @T("Products.Catalog.Edit") - @Model.Name @Html.ActionLink("(" + T("Products.Catalog.BackToList") + ")", "List")
        </div>
        <div class="options">
            <input type="submit" name="save" class="t-button" value="@T("Common.Save")" />
            <input type="submit" name="save-continue" class="t-button" value="@T("common.SaveContinue")" />
            <input type="button" id="customerrole-delete" class="t-button" value="@T("Common.Delete")" />
        </div>
    </div>
    @Html.Partial("_CreateOrUpdate", Model)
}
@Html.DeleteConfirmation("Catelog-delete")
