@model RCSoft.Web.Framework.Mvc.DeleteConfirmationModel
@using (Html.BeginForm(Model.ActionName, Model.ControllerName, new { id = Model.Id }))
{ 
    <div>
        <p>
            @T("Common.Confirm")
        </p>
        <div class="form-actions">
            <span class="t-button" onclick="closeModalWindow();"> @T("Common.NoCancel") </span>
            <input type="submit" class="t-button" value=" @T("Common.Delete") " />
        </div>
    </div>
}
